<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.musciano.adam.brewershandbook.calculators.CoolingLoss">

    <TextView android:text="Total Wort: " android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cooling_labelWort"
        android:textSize="24dp"
        android:layout_marginTop="55dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Evaporation Loss:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cooling_labelEvap"
        android:textSize="24dp"
        android:layout_below="@+id/cooling_labelWort"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingTop="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/cooling_editTextWort"
        android:layout_above="@+id/cooling_labelEvap"
        android:layout_toRightOf="@+id/cooling_labelWort"
        android:layout_toEndOf="@+id/cooling_labelWort" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/cooling_editTextEvap"
        android:layout_below="@+id/cooling_editTextWort"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/cooling_labelEvap"
        android:layout_toEndOf="@+id/cooling_labelEvap" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate"
        android:id="@+id/cooling_btnCalc"
        android:layout_marginTop="52dp"
        android:layout_below="@+id/cooling_labelEvap"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Cooling Loss: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cooling_textViewCooling"
        android:textSize="24dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
