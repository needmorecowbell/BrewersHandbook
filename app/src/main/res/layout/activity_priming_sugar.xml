<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.musciano.adam.brewershandbook.calculators.PrimingSugar">

    <TextView android:text="Brew Volume: " android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/priming_labelVolume"
        android:textSize="24dp"
        android:paddingTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="58dp" />

    <TextView
        android:text="Desired CO2: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/priming_labelDesiredCO2"
        android:textSize="24dp"
        android:paddingTop="10dp"
        android:layout_below="@+id/priming_labelVolume"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Brew Temp: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/priming_labelTemp"
        android:textSize="24dp"
        android:paddingTop="10dp"
        android:layout_below="@+id/priming_labelDesiredCO2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/priming_editTextBrewVol"
        android:layout_above="@+id/priming_labelDesiredCO2"
        android:layout_toRightOf="@+id/priming_labelDesiredCO2"
        android:layout_toLeftOf="@+id/textView4"
        android:layout_toStartOf="@+id/textView4" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/priming_editTextCO2"
        android:layout_below="@+id/priming_editTextBrewVol"
        android:layout_alignLeft="@+id/priming_editTextBrewVol"
        android:layout_alignStart="@+id/priming_editTextBrewVol" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/priming_editTextBrewTemp"
        android:layout_below="@+id/priming_labelDesiredCO2"
        android:layout_toRightOf="@+id/priming_labelTemp"
        android:layout_toEndOf="@+id/priming_labelTemp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate"
        android:id="@+id/priming_btnCalc"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Priming Sugar: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/priming_textViewPrimingSugar"
        android:textSize="24dp"
        android:paddingTop="15dp"
        android:layout_below="@+id/priming_btnCalc"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="gals"
        android:id="@+id/textView4"
        android:layout_alignBottom="@+id/priming_labelVolume"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
