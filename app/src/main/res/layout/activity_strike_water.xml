<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.musciano.adam.brewershandbook.calculators.StrikeWater">

    <TextView android:text="Water/Grain Ratio:" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/strike_labelRatio"
        android:paddingTop="10dp"
        android:textSize="24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="53dp" />

    <TextView
        android:text="Grain Temp:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/strike_labelGrainTemp"
        android:paddingTop="10dp"
        android:textSize="24dp"
        android:layout_below="@+id/strike_labelRatio"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/strike_editTextRatio"
        android:layout_alignBottom="@+id/strike_labelRatio"
        android:layout_toRightOf="@+id/strike_labelRatio"
        android:layout_toLeftOf="@+id/strike_labelRat"
        android:layout_toStartOf="@+id/strike_labelRat" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/strike_editTextGrainTemp"
        android:layout_below="@+id/strike_labelRatio"
        android:layout_toRightOf="@+id/strike_labelGrainTemp"
        android:layout_toEndOf="@+id/strike_labelGrainTemp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate"
        android:id="@+id/strike_btnCalc"
        android:layout_below="@+id/strike_labelGrainTemp"
        android:layout_toRightOf="@+id/strike_labelGrainTemp"
        android:layout_toEndOf="@+id/strike_labelGrainTemp"
        android:layout_marginTop="53dp" />

    <TextView
        android:text="Strike Water: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/strike_textViewStrike"
        android:paddingTop="15dp"
        android:textSize="24dp"
        android:layout_below="@+id/strike_btnCalc"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="qt/lb"
        android:id="@+id/strike_labelRat"
        android:layout_alignBottom="@+id/strike_editTextRatio"
        android:layout_alignRight="@+id/strike_editTextGrainTemp"
        android:layout_alignEnd="@+id/strike_editTextGrainTemp" />

    <TextView
        android:text="Target Temp:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/strike_labelTarget"
        android:paddingTop="10dp"
        android:textSize="24dp"
        android:layout_below="@+id/strike_editTextGrainTemp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/strike_editTextTarget"
        android:layout_alignBottom="@+id/strike_labelTarget"
        android:layout_toRightOf="@+id/strike_textViewStrike"
        android:layout_toEndOf="@+id/strike_textViewStrike" />
</RelativeLayout>
