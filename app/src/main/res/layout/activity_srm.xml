<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.musciano.adam.brewershandbook.calculators.SRM">

    <TextView android:text="Lbs of Grain:" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/srm_labelGrain"
        android:paddingTop="10dp"
        android:textSize="24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="53dp" />

    <TextView
        android:text="Lovibond: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/srm_labelLovibond"
        android:paddingTop="10dp"
        android:textSize="24dp"
        android:layout_below="@+id/srm_labelGrain"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Brew Volume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/srm_labelVolume"
        android:paddingTop="10dp"
        android:textSize="24dp"
        android:layout_below="@+id/srm_labelLovibond"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate"
        android:id="@+id/srm_btnCalc"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/srm_editTextGrain"
        android:layout_alignTop="@+id/srm_labelGrain"
        android:layout_toRightOf="@+id/srm_labelVolume"
        android:layout_toEndOf="@+id/srm_labelVolume" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/srm_editTextLovibond"
        android:layout_below="@+id/srm_labelGrain"
        android:layout_alignLeft="@+id/srm_btnCalc"
        android:layout_alignStart="@+id/srm_btnCalc" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/srm_editTextBrewVol"
        android:layout_below="@+id/srm_labelLovibond"
        android:layout_toRightOf="@+id/srm_labelVolume"
        android:layout_toStartOf="@+id/srm_labelgals"
        android:layout_toLeftOf="@+id/srm_labelgals" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="gals"
        android:layout_alignBottom="@+id/srm_labelVolume"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/srm_labelgals" />

    <TextView
        android:text="SRM: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/srm_textViewSRM"
        android:paddingTop="15dp"
        android:textSize="24dp"
        android:layout_below="@+id/srm_btnCalc"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
