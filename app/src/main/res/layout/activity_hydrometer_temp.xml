<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.musciano.adam.brewershandbook.calculators.HydrometerTemp">

    <TextView android:text="Temperature (F): " android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hydrometer_labelTemp"
        android:textSize="24dp"
        android:layout_marginTop="54dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/hydrometer_editTextTemp"
        android:layout_alignBottom="@+id/hydrometer_labelTemp"
        android:layout_toRightOf="@+id/hydrometer_labelTemp"
        android:layout_toEndOf="@+id/hydrometer_labelTemp" />

    <TextView
        android:text="Specific Gravity: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hydrometer_labelSG"
        android:textSize="24dp"
        android:layout_below="@+id/hydrometer_labelTemp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingTop="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/hydrometer_editTextSG"
        android:layout_alignBottom="@+id/hydrometer_labelSG"
        android:layout_toRightOf="@+id/hydrometer_labelSG"
        android:layout_toEndOf="@+id/hydrometer_labelSG" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate"
        android:id="@+id/hydrometer_btnCalc"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="New Specific Gravity: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hydrometer_textViewNewSG"
        android:textSize="24dp"
        android:paddingTop="10dp"
        android:layout_below="@+id/hydrometer_btnCalc"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="74dp" />

    <TextView
        android:text="Calibrated Temperature:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hydrometer_labelCalibrated"
        android:textSize="24dp"
        android:paddingTop="10dp"
        android:layout_alignTop="@+id/hydrometer_editTextCal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/hydrometer_editTextCal"
        android:layout_below="@+id/hydrometer_labelSG"
        android:layout_toEndOf="@+id/hydrometer_labelCalibrated"
        android:layout_toRightOf="@+id/hydrometer_labelCalibrated" />

</RelativeLayout>
