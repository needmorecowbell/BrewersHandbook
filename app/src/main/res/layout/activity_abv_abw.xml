<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.musciano.adam.brewershandbook.calculators.AbvAbw">

    <TextView android:text="Starting Gravity" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/abvw_labelSg"
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="45dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/abvw_editTextSg"
        android:layout_alignBottom="@+id/abvw_labelSg"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/abvw_labelSg"
        android:layout_toEndOf="@+id/abvw_labelSg" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/abvw_editTextFg"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/abvw_labelSg"
        android:layout_alignRight="@+id/abvw_editTextSg"
        android:layout_alignEnd="@+id/abvw_editTextSg"
        android:layout_toEndOf="@+id/abvw_labelFg"
        android:layout_toRightOf="@+id/abvw_labelFg" />

    <TextView
        android:text="Final Gravity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/abvw_labelFg"
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_alignTop="@+id/abvw_editTextFg"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate"
        android:id="@+id/abvw_btnCalculate"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/abvw_editTextFg"
        android:layout_toLeftOf="@+id/abvw_editTextFg"
        android:layout_toStartOf="@+id/abvw_editTextFg" />

    <TextView
        android:text="ABV: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/abvw_textViewABV"
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_alignTop="@+id/abvw_btnCalculate"
        android:layout_toRightOf="@+id/abvw_labelSg"
        android:layout_toEndOf="@+id/abvw_labelSg" />

    <TextView
        android:text="ABW: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/abvw_textViewABW"
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_below="@+id/abvw_btnCalculate"
        android:layout_alignRight="@+id/abvw_textViewABV"
        android:layout_alignEnd="@+id/abvw_textViewABV" />

</RelativeLayout>
