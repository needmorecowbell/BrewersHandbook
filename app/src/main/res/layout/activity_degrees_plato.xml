<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.musciano.adam.brewershandbook.calculators.DegreesPlato">

    <TextView android:text="Original Gravity" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:id="@+id/plato_labelOg"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="67dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/plato_editTextOG"
        android:layout_alignBottom="@+id/plato_labelOg"
        android:layout_toRightOf="@+id/plato_labelOg"
        android:layout_toEndOf="@+id/plato_labelOg" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate"
        android:id="@+id/plato_btnCalc"
        android:layout_below="@+id/plato_labelOg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />

    <TextView
        android:text="Degrees Plato: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:id="@+id/plato_textViewPlato"
        android:paddingTop="15dp"
        android:layout_below="@+id/plato_btnCalc"
        android:layout_toLeftOf="@+id/plato_editTextOG"
        android:layout_toStartOf="@+id/plato_editTextOG" />

</RelativeLayout>
