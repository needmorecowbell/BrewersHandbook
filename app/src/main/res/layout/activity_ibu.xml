<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.musciano.adam.brewershandbook.calculators.IBU">

    <TextView android:text="Alpha Acids:" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ibu_labelAlphaAcids"
        android:textSize="24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="42dp" />

    <TextView
        android:text="Utilization:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ibu_labelUtilization"
        android:textSize="24dp"
        android:layout_below="@+id/ibu_labelAlphaAcids"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingTop="10dp" />

    <TextView
        android:text="Ounces:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ibu_labeloz"
        android:textSize="24dp"
        android:paddingTop="10dp"
        android:layout_below="@+id/ibu_labelUtilization"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate"
        android:id="@+id/ibu_btnCalc"
        android:layout_below="@+id/ibu_labeloz"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/ibu_editTextAlphaAcids"
        android:layout_alignBottom="@+id/ibu_labelAlphaAcids"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/ibu_labelAlphaAcids"
        android:layout_toEndOf="@+id/ibu_labelAlphaAcids" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/ibu_editTextUtil"
        android:layout_alignBottom="@+id/ibu_labelUtilization"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/ibu_labelUtilization"
        android:layout_toEndOf="@+id/ibu_labelUtilization" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/ibu_editTextOz"
        android:layout_alignBottom="@+id/ibu_labeloz"
        android:layout_toRightOf="@+id/ibu_labeloz"
        android:layout_alignRight="@+id/ibu_editTextUtil"
        android:layout_alignEnd="@+id/ibu_editTextUtil" />

    <TextView
        android:text="IBU:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ibu_textViewIBU"
        android:textSize="24dp"
        android:paddingTop="10dp"
        android:layout_below="@+id/ibu_btnCalc"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp" />

</RelativeLayout>
