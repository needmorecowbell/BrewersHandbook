<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.musciano.adam.brewershandbook.calculators.AbsorptionLoss"
    android:id="@+id/activity_absorption_loss">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amount of Grain: "
        android:id="@+id/absorption_textViewGrainAmnt"
        android:layout_marginTop="95dp"
        android:textStyle="bold"
        android:textSize="24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/absorption_editTxtGrain"
        android:editable="true"
        android:enabled="true"
        android:inputType="numberDecimal"
        android:layout_toLeftOf="@+id/absorption_textViewGrainSize"
        android:layout_alignTop="@+id/absorption_textViewGrainAmnt"
        android:layout_toRightOf="@+id/absorption_textViewGrainAmnt"
        android:layout_toEndOf="@+id/absorption_textViewGrainAmnt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="lbs"
        android:id="@+id/absorption_textViewGrainSize"
        android:layout_above="@+id/absorption_btnCompute"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate"
        android:id="@+id/absorption_btnCompute"
        android:layout_marginTop="81dp"
        android:layout_below="@+id/absorption_textViewGrainAmnt"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Absorption Loss: "
        android:id="@+id/absorption_textViewAnswer"
        android:layout_marginTop="77dp"
        android:textStyle="bold"
        android:textSize="24dp"
        android:layout_below="@+id/absorption_btnCompute"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
